<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangjiao.mapper.OptionResultMapper">
    <resultMap id="optionResultMap" type="optionResult">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="optionId" column="option_id"/>

    </resultMap>
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into option_result(user_id, option_id)
        values (#{userId}, #{optionId})
    </insert>
    <select id="selectById" resultMap="optionResultMap">
        select id, user_id, option_id
        from option_result
        where id = #{id}
    </select>
</mapper>